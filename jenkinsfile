pipeline{

	agent none

	environment {
		DOCKERHUB_CREDENTIALS=credentials('docker')
	}

	stages {

		stage('Clean') {
      			agent { 
                		label 'docker'
            		}
			steps {
				sh 'sudo docker rmi blizzzm/nginx:latest | if ($build_error); then continue; fi'
			}
		}
		
		stage('Build') {
      			agent { 
                		label 'docker'
            		}
			steps {
				sh 'sudo docker build -t blizzzm/nginx:latest .'
			}
		}

		stage('Login') {
      			agent { 
                		label 'docker'
            		}
			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW |sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}

		stage('Push') {
      			agent { 
                		label 'docker'
            		}
			steps {
				sh 'sudo docker push blizzzm/nginx:latest'
			}
		}
	  
    stage('Deploy') {
      agent { 
                label 'ansible'
            }
      steps {
      
      sh "ansible-playbook playbook.yml"

}
}
}
}
